@import "../../app.variables.styl";
@import "../../app.btns.styl";

$detailsPadding=10px;
.details
	display table
	width 100%
	&__section
		display flex
	&__slide-show
		flex-basis 40%
		flex-grow 0
		flex-shrink 0
		width 50%
	&__specification
		width 60%
	&__tabs
		padding $detailsPadding
		display table
		width 100%
		position relative
		height 75%
		overflow hidden
	&__header
		position relative
		padding $detailsPadding
		> h2
			float left

		> .price
			float right
		&:after
			display table
			content ""
			width 100%
			clear both
	&__footer
		padding $detailsPadding
		height 10%;
		&:after
			content ''
			width 100%
			clear both
			display table
	.lt_btn
		width 30%
		float right
