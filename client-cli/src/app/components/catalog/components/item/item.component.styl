@import "../../../../app.variables.styl";

itemContentDefaultWidth=95%;
.item
	background #FFF
	display flex
	height 100%
	text-align center
	flex-direction column
	align-items center
	&__img
		width itemContentDefaultWidth
		position relative
		border 1px solid red
		flex-basis 80%
		flex-shrink 1
		flex-grow 1
		> img
			width 100%
	&__description
		border 1px solid blue
		width itemContentDefaultWidth
		display flex
		flex-direction column
		justify-content center

