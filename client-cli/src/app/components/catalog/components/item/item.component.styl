@import "../../../../app.variables.styl";

itemContentDefaultWidth=95%;
.item
	background #FFF
	-webkit-display flex
	-moz-display flex
	height 100%
	text-align center
	flex-direction column
	align-items center
	justify-content center
	padding 10px 0;
	box-sizing border-box
	box-shadow defaultBlockShadow;
	cursor pointer
	transition transform defaultElementTransitionTimer
	&:hover
		z-index 2
		transform scale(1.01)

	&__img
		width itemContentDefaultWidth
		position relative
		flex-basis 80%
		flex-shrink 1
		flex-grow 1
		> img
			width 100%

	&__description
		width itemContentDefaultWidth
		display flex
		color defaultTextColor
		flex-direction column
		justify-content center

