@import "../../../../app.variables.styl";
@import "../../../../app.btns.styl";

itemContentDefaultWidth=95%;
.item
	background #FFF
	-webkit-display flex
	-moz-display flex
	height 100%
	text-align center
	flex-direction column
	align-items center
	justify-content center
	padding 1rem;
	box-sizing border-box
	box-shadow defaultBlockShadow;
	cursor pointer
	transition transform defaultElementTransitionTimer
	border-radius @defaultBlocBorderRadius;
	&:hover
		z-index 2
		transform scale(1.01)

	&__img
		width itemContentDefaultWidth
		position relative
		flex-basis 80%
		flex-shrink 1
		flex-grow 1
		> img
			width 100%

	&__description
		width itemContentDefaultWidth
		display flex
		color defaultTextColor
		flex-direction column
		justify-content center

	&__name
		padding 0 1rem
		> h4
			text-overflow: ellipsis;
			overflow: hidden;
			white-space: nowrap;
			margin 0
	&__btn
		width 50%;
		margin 0 auto
