@import "../../../app.variables.styl";
//navbarBgDefaultColor
.navbar
	height navbarDefaultHeight
	position relative
	z-index 2
	width 100%
	max-width maxPageWidth
	display flex
	margin 0 auto
	&__menu
		list-style none
		display flex
		-webkit-display flex
		height 100%
		width 80%
		margin 0 auto
		&_item
			flex-basis 10%
			-webkit-display flex
			display flex
			cursor pointer
			&:hover
				background headBgDefaultColorDark
				transition background 0.5s, color 0.5s
			> a
				text-decoration none
				height calc(100% + 1px)
				width 100%
				display inline-block
				color headerDefaultTextColor
				> span
					line-height navbarDefaultHeight
					text-align center
					width 100%
					display block
					height 100%
	&__cart
		width 20%
		text-align right
		display flex
		flex-direction column
		justify-content center
		cursor pointer
		color headerDefaultTextColor
		> span
			padding-right 10px