@import'./app.variables.styl';

$btnBgAdd= #00e676;
$defaultBtnBg=#f4f4f4
$defaultBlockShadow=0 1px 4px 0 rgba(117,117,117,.5)
$activeBlockShadow=0 1px 4px 0 rgba(117,117,117,.7) inset
.btn
	background-color $defaultBtnBg
	border none
	margin 0
	font-size 1rem
	outline none
	border-radius 2px
	box-shadow $defaultBlockShadow
	transition background .3s, color .4s
	padding 10px 15px
	cursor pointer
	text-align center
	position relative
	box-sizing border-box
	width 100%
	&_add
		color #383838
		&:active
			box-shadow $activeBlockShadow
			background-color headBgDefaultColor
		&:hover
			background-color headBgDefaultColor
			color #FFF