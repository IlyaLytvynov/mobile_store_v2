@import "../../app.variables.styl";

$baseTabsControllsBg=#f4f4f4
$baseTextColor=#404040

.tabs
	width 100%
	position relative
	display table
	background
	&__controlls
		position relative
		box-shadow 0 1px 4px 0 rgba(117,117,117,.5)
		color $baseTextColor
		display table
		text-transform uppercase
		font-size .8em
		&-indicator
			position absolute
			height 10%
			bottom 0
			background-color darken(headBgDefaultColor, 5%)
			width 50px
			transition all .3s
		&:after
			display table
			content ""
			width 100%
			clear both

	&__control
		display table-cell
		padding 10px 15px
		text-align center
		cursor pointer
		background $baseTabsControllsBg
		transition background .5s
		border-radius 2px
		border-left 1px solid rgba(117,117,117,.23)
		&-tab_active
			background #FFF
			color darken($baseTextColor,100%)
	&__content
		min-height 100%
		position relative
		&-tab
			opacity 0
			min-height 100%
			position absolute
			top 0
			left 0
			transition opacity 0.3s
			padding 10px 0
			&_active
				opacity 1