@import'../../styles/variables.styl';

$inputFontSize=1rem;

.input
	position relative
	&-native-input
		border none
		border-bottom 1px solid $baseTextColor
		width 100%
		box-sizing border-box
		outline none
		padding-bottom 0.1rem
		font-size $inputFontSize
		&:focus+.input-underline
			transform scaleX(1)
			transition transform 0.4s
	&-underline
		width 100%
		height 2px
		transform scaleX(0)
		transform-origin 50%
		background blue
		position absolute
		bottom 0
		z-index 1
	&-label
		position absolute
		bottom 1px
		left 1px
		font-size $inputFontSize
		transition transform 0.4s
		pointer-events none
		color $baseTextColor
		transform-origin 0 0
	&.active
		.input-label
			transform translate(0, -1.25rem) scale(0.7)
	&.not-valid
		.input-underline
			background red
			transform scaleX(1)