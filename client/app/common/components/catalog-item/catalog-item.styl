@import "../../../variables.styl"
.catalog-item
	width 240px
	flex-grow 1
	flex-shrink 1
	flex-basis 200px
	border 1px solid red
	box-sizing border-box
	flex-flow row wrap
	display table
	padding 1em
	min-height 250px
	height 400px
	.btn_add
		background red
		padding 10px
		box-sizing border-box
	.item_info_header
		font-weight bold
	.item_info_description
		font-size 0.9em
		padding 1em 0

	.item_info_price
		display flex
		justify-content flex-end
	.image-wrapper
		position relative
		width 80%
		margin 0 auto
		img
			width 100%
